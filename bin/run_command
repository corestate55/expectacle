#!/usr/bin/env ruby
# frozen_string_literal: true

require 'expectacle'

if ARGV.size != 2
  puts "#{$PROGRAM_NAME} <host_list.yml> <command_list.yml>"
  exit
end
file_dir = File.dirname(File.expand_path(__FILE__))
base_dir = File.expand_path('../vendor', file_dir)
thrower = Expectacle::Thrower.new(base_dir: base_dir)
thrower.run_command_for_all_hosts(ARGV[0], ARGV[1])
